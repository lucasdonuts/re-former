<%= form_for @user, url: {action: 'update'} do |form| %>
  <%= form.label :username, 'Choose a Username:' %><br>
  <%= form.text_field :username, placeholder: 'Username' %><br><br>
  <%= form.label :email, 'Enter a Valid Email Address' %><br>
  <%= form.email_field :email, placeholder: 'Email' %><br><br>
  <%= form.label :password %><br>
  <%= form.password_field :password, placeholder: 'Password' %><br><br>
  <%= form.submit "Create User" %>
<% end %>